# ==============================================================================
# RE Shopping Cart Web App - Environment Variables Example
# ==============================================================================
# Copy this file to .env.local (local development) or .env.prod (production)
# and fill in the appropriate values for your environment.
# ==============================================================================

# ==============================================================================
# Application Configuration
# ==============================================================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=local

# ==============================================================================
# Database Configuration
# Note: Using Aiven MySQL as external database (not containerized)
# ==============================================================================
DB_URL=jdbc:mysql://your-aiven-host:your-aiven-port/your-database-name
DB_USERNAME=your-aiven-username
DB_PASSWORD=your-aiven-password
DB_POOL_SIZE=10
DB_POOL_MIN_IDLE=2
DB_POOL_CONNECTION_TIMEOUT=20000
DB_POOL_IDLE_TIMEOUT=300000

# ==============================================================================
# JPA/Hibernate Configuration
# ==============================================================================
JPA_DDL_AUTO=none
JPA_SHOW_SQL=false

# ==============================================================================
# Thymeleaf Configuration
# ==============================================================================
THYMELEAF_CACHE=true

# ==============================================================================
# Logging Configuration
# ==============================================================================
LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO
